{
  "name": "nodeplate",
  "version": "1.0.0",
  "description": "Nothing but my very own nodejs boilerplate",
  "main": "dist/index.js",
  "repository": "https://github.com/enbermudas/nodeplate.git",
  "author": "Enrique Berm√∫dez <enbermudez96@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src/ -d dist/",
    "coveralls": "yarn test --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "yarn run lint --fix",
    "lint:flow": "yarn run lint:fix && flow",
    "prepublish": "yarn run build",
    "test": "jest --config jest.config.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-flow": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.0.3",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.0",
    "flow-bin": "^0.116.1",
    "husky": "^4.0.10",
    "jest": "^25.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:flow && yarn build && yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.6.0"
  }
}
